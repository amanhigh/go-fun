{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ginkgo",
            "type": "shell",
            "command": "ginkgo",
            "args": [
                "-r",
                "--cover",
                "--output-dir=/tmp",
                "--race",
                "${fileDirname}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": {
                "owner": "go",
            }
        }
    ]
}